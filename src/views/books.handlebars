<div class="container">
  
  <h2>List of Books</h2>
  {{#if successAlert}}
    <div class="alert alert-success fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Success!</strong> {{successAlert}}
    </div>
  {{/if}}
  <div class="container products-view-all">
  <form class="post-list">
    <input type="hidden" value="">
  </form>
  <div class="clearfix">
    <article class="navbar-form navbar-left p-0 m-0 ml-b">
      <div class="form-group">
        <label>Per Page: </label>
        <select class="form-control post_max m-b">
          <option value="20">20</option>
          <option value="50">50</option>
          <option value="100">100</option>
        </select>
      </div>
      <label>Search Keyword: 
        <input type="text" placeholder="Enter a keyword" class="form-control post_search_text m-b">
      </label>
      <div class="form-group">
        <label>Order By: </label>
        <select class="form-control post_name m-b">
          <option value="name">Title</option>
          <option value="price">Price</option>
          <option value="quantity">Quantity</option>
        </select>
        <select class="form-control post_sort m-b">
          <option value="ASC">ASC</option>
          <option value="DESC">DESC</option>
        </select>
      </div>
      <input type="submit" value="Filter" class="btn btn-primary post_search_submit m-b">
    </article>
  </div>
  <hr>
  <div class="clearfix">
    <div class="pagination-container clearfix"></div>
    <div class="pagination-nav"></div>
  </div>
</div>
  <p style="text-align:right">
    <a href="/book/addBook" style="margin-left:10px">Add Books</a>
  </p>
  <div class="table-responsive">          
  <table class="table table-bordered">
    <thead>
      <tr>
        <th data-sort="id">Sr No</th>
        <th data-sort="name">Book Name</th>
        <th data-sort="publisher">Publisher</th>
        <th data-sort="author">Author</th>
        <th data-sort="price">Price</th>
        <th data-sort="genere">Gener</th>
        <th >View/Edit</th>
      </tr>
    </thead>
    <tbody>
        {{#each booksResult}}
         {{#if this.name}}
            <tr>
                <td>{{@index}}</td>
                <td>{{this.name}}</td>
                <td>{{this.publisher}}</td>
                <td>{{this.author.firstname}} {{this.author.lastname}}</td>
                <td>{{this.price}}</td>
                <td>{{this.genere}}</td>
                <td>
                    {{#if this.setEdit}}<button class="btn button-primary" data-viewId="{{this.id}}" data-condition="edit" data-toggle="modal" data-target="#myModal">Edit</button>{{/if}}
                    <button class="btn btn-primary" data-viewId="{{this.id}}" data-condition="view" data-toggle="modal" data-target="#myModal">View</button>
                </td>
            </tr>
          {{/if}}
      {{/each}}
      
    </tbody>
  </table>
   </div>
</div>

